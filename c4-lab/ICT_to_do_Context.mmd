title ICT To Do List - System Context

Person(student, "Student", "Manages personal tasks and tracks course work")
Person(instructor, "Instructor", "Views teaching tasks and monitors assignment deadlines")
Person(admin, "System Administrator", "Manages configuration, users, and sync health")

System_Ext(mycourses, "MyCourses", "External e-learning system\nProvides courses, assignments, submissions")

System_Boundary(system, "ICT To Do List") {

    Container(webapp, "Web App", "React", "Browser-based SPA for task management")
    Container(mobileapp, "Mobile App", "Flutter", "Cross-platform mobile app for iOS and Android")

    Container(api, "Web API", "Python FastAPI", "REST API serving JSON over HTTPS")

    ContainerDb(db, "Database", "PostgreSQL", "Stores user profiles, tasks, sync data")

    Container(connector, "MyCourses Connector", "Python", "Integration module for MyCourses API")
}

Rel(student, webapp, "Uses", "HTTPS")
Rel(student, mobileapp, "Uses", "HTTPS")

Rel(instructor, webapp, "Uses (Instructor view)", "HTTPS")
Rel(admin, webapp, "Uses Admin interface", "HTTPS")

Rel(webapp, api, "Makes API calls", "JSON / HTTPS")
Rel(mobileapp, api, "Makes API calls", "JSON / HTTPS")

Rel(api, db, "Reads/Writes", "SQL")
Rel(api, connector, "Triggers sync", "Internal call")

Rel(connector, mycourses, "Retrieves courses, assignments, submission status", "JSON / HTTPS")
